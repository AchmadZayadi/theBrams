<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Listrik.MenuListrik">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ivBackToolbar"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="20sp"
            android:layout_toEndOf="@id/ivBackToolbar"
            android:text="Listrik"
            android:textColor="@color/hitam"
            android:textSize="20sp" />
    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/dropshadow" />
    <LinearLayout
        android:layout_below="@id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:text="Beli Token atau Bayar Tagihan Listrik"
            android:textColor="#707070"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070" />

        <RelativeLayout
            android:id="@+id/rlTokenListrik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Token Listrik"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="60sp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_token" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070" />

        <RelativeLayout
            android:id="@+id/rlTagihanListik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Tagihan Listrik"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="60sp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_listrik" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070" />

    </LinearLayout>

</RelativeLayout>